    <div id="food">

        <div id="entree" class="container">
            <div class="row">

                <% let i; for (i=0; i < entre.length; i++) { %>
                    <div class="col-sm-3 bordureJaune">

                        <img src="img/salade.jpg " id="all" width="100% ">

                        <h1>
                            <%= entre[i].entre_name %>
                        </h1>
                        <p>
                            <%= entre[i].entre_prix %>$
                        </p>

                        <input type="number" min="0" max="500">



                        <a href="#" data-name="<%=entre[i].entre_name%>" data-price="<%= entre[i].entre_prix %>" class="add-to-cart btn btn-info">Ajouter</a>
                    </div>
                    <% } %>


            </div>

        </div>








        <div id="pizza" class="container ">

            <div class="row">
                <% let j; for (j=0; j < entre.length; j++) { %>
                    <div class="col-sm-3 bordureJaune">


                        <img src="img/slide-1.jpg " id="all" width="100% ">

                        <h1>
                            <%= Pizza[j].pizza_name %>
                        </h1>
                        <p>
                            <%= Pizza[j].pizza_desc %>
                        </p>
                        <p>
                            <%= Pizza[j].pizza_prix %>£
                        </p>

                        <select name="select ">
                                <option value="value1 ">Normale</option>
                                <option value="value2 " selected>Large</option>
                            </select>
                        <select name="select ">
                                <option value="value1">Classique</option>
                                <option value="value2" selected>Fine</option>
                            </select>
                        <input type="number" min="0" max="500">
                        <a href="#" data-name="<%=Pizza[j].pizza_name%>" data-price="<%= Pizza[j].pizza_prix %>" class="add-to-cart btn btn-info">Ajouter</a>
                    </div>
                    <% } %>



            </div>
        </div>

    </div>
    <div id="boisson" class="container ">

        <div class="row ">
            <% let k; for (k=0; k < boisson.length; k++) { %>
                <div class="col-sm-3 bordureJaune">
                    <img src="img/coca.png " width="100% ">
                    <h1>
                        <%= boisson[k].b_name %>
                    </h1>
                    <p>
                        <%= boisson[k].b_prix %>£
                    </p>
                    <input type="number " min="0 " max="500 ">
                    <a href="# " data-name="<%=boisson[k].b_name%>" data-price="
                            <%= boisson[k].b_prix %>" class="add-to-cart btn btn-info">Ajouter</a>
                </div>
                <% } %>



                    <div id="menu " class="container ">

                        <div class="row ">
                            <!--faire le menu -->
                            <div class="row ">
                                <div class="col-lg-6 bordureJaune ">
                                    <img src="img/menu_pizza_boisson.jpg " id="all" style="max-height: 200px; ">
                                    <h1>Extra Menu </h1>
                                    <p>1 entrée, 1 pizza Médium, 1 boisson</p>
                                    <p>15,00 €</p>

                                    <button type="button " class="btn btn-info ">Ajouter</button>
                                </div>
                                <div class="col-lg-6 bordureJaune ">
                                    <img src="img/menu_pizza_boisson.jpg " id="all" style="max-height: 200px; ">
                                    <h1>Mega Menu</h1>
                                    <p>2 entrées, 2 pizzas Médium, 1 boisson d’au moins 1l</p>
                                    <button type="button " class="btn btn-info ">Ajouter</button>
                                </div>
                                <div class="clearfix " style="margin : 10px "></div>



                            </div>


                        </div>
