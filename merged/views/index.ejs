                        <a href="#" data-name="<%=entre[i].entre_name%>" data-price="<%= entre[i].entre_prix %>" class="add-to-cart btn btn-info">Ajouter</a>
                    </div>
                    <% } %>

            </div>

        </div>








        <div id="pizza" class="container ">

            <div class="row">
                <% let j; for (j=0; j < entre.length; j++) { %>
