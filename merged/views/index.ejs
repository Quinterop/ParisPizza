    <!-- Modal des infos pour commander (nom,adresse....) -->

    <div class="modal fade right" id="addressModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">INFOS</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="infos" method="post" action="/livraison">
                        <div class="form-row">
                            <div class="field col-md-6">
                                <label for="text" style="color:black">Prénom</label>
                                <input type="text" class="form-control input required-contact-field" required="true" name="prenom" required class="input required-contact-field" autocomplete='name' id="prenom" placeholder="Prénom">
                                <p id="demo"></p>

                            </div>
                            <div class="field col-md-6">
                                <label for="inputPassword4" style="color: black;">Nom</label>
                                <input type="text" class="form-control input required-contact-field" required="true" id="name_of_client" name="name_of_client" placeholder="Nom ">
                            </div>
                        </div>
                        <div class="field col-md-6">
                            <label for="inputPassword4" style="color: black;">Adresse</label>
                            <input type="text" class="form-control input required-contact-field" required="true" id="addr" name="addr" placeholder="adresse ">
                        </div>
                        <div class="field col-md-6">
                            <label for="inputPassword4" style="color: black;">Code (optionnel)</label>
                            <input type="text" class="form-control input " id="code" name="code" placeholder="code ">
                        </div>
                        <div class="field col-md-6">
                            <label for="inputPassword4" style="color: black;">Numéro portable</label>
                            <input type="text" class="form-control input required-contact-field" id="tel" required="true" name="tel" placeholder="tel ">
                        </div>
                        <div class="field col-md-6">
                            <label for="inputPassword4" style="color: black;">Adresse-email</label>
                            <input type="text" class="form-control input required-contact-field" id="email" name="email" required="true" placeholder="email ">
                        </div>

                        <div class="field col-md-6 ">
                            <label for="inputZip" style="color: black;">Heure de livraison</label>
                            <input type="time" id="heure" name="heure" min="09:00" max="18:00" class="form-control input required-contact-field" required="true"> </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" value="submit" id="finish" class="btn btn-success button--disabled">Commander</button>

                </div>
                </form>
                <script>
                    $(document).ready(function() {
                        var disable_form_submit = function() {

                            var contactNameField = '.required-contact-field';

                            $(contactNameField).keyup(function() {
                                var empty = false;
                                $(contactNameField).each(function() {
                                    if ($(this).val() == '') {
                                        empty = true;
                                    }
                                });
                                if (empty) {
                                    $('#finish').attr('disabled', 'disabled');
                                } else {
                                    $('#finish').removeAttr('disabled').addClass('button--primary');



                                }
                            });
                        };

                        $(disable_form_submit);
                    });
                </script>
            </div>
        </div>






    </div>

